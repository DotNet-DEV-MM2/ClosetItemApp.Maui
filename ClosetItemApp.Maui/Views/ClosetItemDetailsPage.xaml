<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClosetItemApp.Maui.Views.ClosetItemDetailsPage"
             xmlns:vm="clr-namespace:ClosetItemApp.Maui.ViewModels"
             Title="{Binding ClosetItem.ShortName}">
    <StackLayout>
        <Label Text="{Binding ClosetItem.ItemType}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" FontSize="Medium"/>
        <Label Text="{Binding ClosetItem.Color}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" FontSize="Medium"/>
    </StackLayout>
</ContentPage>